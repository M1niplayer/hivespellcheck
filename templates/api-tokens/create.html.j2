{%- import "utils.html.j2" as utils -%}

<form id="create-api-token-form" method="post" action="/system/{{ system.id }}/api-tokens" hx-boost="true"
    hx-push-url="false" hx-target="#create-api-token-inner-form" hx-indicator="#create-api-token-submit"
    class="container-fluid">
    <div id="create-api-token-inner-form" class="grid">
        {% block inner_create_api_token_form %}
        <label>
            {{ ctx.t("api-tokens.create.field.description.label") }}
            <input {% call utils::field(api_token_create_form, "description" ) %}
                placeholder='{{ ctx.t("api-tokens.create.field.description.placeholder") }}' required minlength="3"
                aria-describedby="token-description-tip" />
            <small id="token-description-tip">{{ ctx.t("api-tokens.create.field.description.tip") }}</small>
        </label>
        <label>
            {{ ctx.t("api-tokens.create.field.expiration.label") }}
            <input type="datetime-local" {% call utils::field(api_token_create_form, "expiration" ) %}
                aria-describedby="token-expiration-tip" />
            <small id="token-expiration-tip">{{ ctx.t("api-tokens.create.field.expiration.tip") }}</small>
        </label>
        {% endblock inner_create_api_token_form %}
    </div>
    <div class="flex-end">
        <button id="create-api-token-submit">
            <span class="material-icons">add</span>
            {{ ctx.t("control.create") }}
        </button>
    </div>
</form>
